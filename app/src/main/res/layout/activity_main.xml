<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#333435"
    android:shrinkColumns="*"
    android:stretchColumns="*">

    <TableRow
        android:layout_marginTop="0dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="50dp"
            android:textColor="#ffffff"
            android:gravity="right"
            android:backgroundTint="@android:color/transparent"
            android:cursorVisible="false"
            android:alpha="0.7"
            android:id="@+id/tvMath"
            android:layout_span="5"
            android:text=""
            />
    </TableRow>

    <TableRow
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="35dp"
            android:textColor="#ffffff"
            android:gravity="right"
            android:text="0"
            android:alpha="0.7"
            android:id="@+id/tvResult"
            android:layout_span="5"/>
    </TableRow>
    <TableRow
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/btnOpen"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#00000000"
            android:text="("
            android:textColor="#ffffff"
            android:textSize="35dp"
            android:gravity="center" />
        <TextView
            android:id="@+id/btnClose"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#00000000"
            android:text=")"
            android:textColor="#ffffff"
            android:textSize="35dp"
            android:gravity="center" />

        <TextView
            android:id="@+id/btnResult"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#00000000"
            android:text="="
            android:textColor="#ffffff"
            android:textSize="35dp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/btnMod"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#efa851"
            android:text="%"
            android:textColor="#ffffff"
            android:textSize="35dp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/btnDel"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#00000000"
            android:text="DEL"
            android:textColor="#ffffff"
            android:textSize="35dp"
            android:gravity="center"/>
    </TableRow>
    <TableRow>
        <TextView
            android:id="@+id/btn7"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#00000000"
            android:text="7"
            android:textColor="#ffffff"
            android:textSize="35dp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/btn8"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#00000000"
            android:text="8"
            android:textColor="#ffffff"
            android:textSize="35dp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/btn9"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#00000000"
            android:text="9"
            android:textColor="#ffffff"
            android:textSize="35dp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/btnPlus"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#efa851"
            android:text="+"
            android:textColor="#ffffff"
            android:textSize="35dp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/btnAC"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#00000000"
            android:text="AC"
            android:textColor="#ffffff"
            android:textSize="35dp"
            android:gravity="center"/>
    </TableRow>
    <TableRow>
        <TextView
            android:id="@+id/btn4"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#00000000"
            android:text="4"
            android:textColor="#ffffff"
            android:textSize="35dp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/btn5"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#00000000"
            android:text="5"
            android:textColor="#ffffff"
            android:textSize="35dp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/btn6"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#00000000"
            android:text="6"
            android:textColor="#ffffff"
            android:textSize="35dp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/btnSub"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#efa851"
            android:text="-"
            android:textColor="#ffffff"
            android:textSize="35dp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/btnSquareRoot"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#00000000"
            android:text="@string/sqr_root"
            android:textColor="#ffffff"
            android:textSize="35dp"
            android:gravity="center"/>
    </TableRow>
    <TableRow>
        <TextView
            android:id="@+id/btn1"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#00000000"
            android:text="1"
            android:textColor="#ffffff"
            android:textSize="35dp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/btn2"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#00000000"
            android:text="2"
            android:textColor="#ffffff"
            android:textSize="35dp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/btn3"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#00000000"
            android:text="3"
            android:textColor="#ffffff"
            android:textSize="35dp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/btnMul"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#efa851"
            android:text="*"
            android:textColor="#ffffff"
            android:textSize="35dp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/btnX2"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#00000000"
            android:text="@string/sqr"
            android:textColor="#ffffff"
            android:textSize="35dp"

            android:gravity="center"/>
    </TableRow>
    <TableRow>
        <TextView
            android:id="@+id/btnDot"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#00000000"
            android:text="."
            android:textColor="#ffffff"
            android:textSize="35dp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/btn0"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#00000000"
            android:text="0"
            android:textColor="#ffffff"
            android:textSize="35dp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/btnANS"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#00000000"
            android:text="ANS"
            android:textColor="#ffffff"
            android:textSize="25dp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/btnDiv"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#efa851"
            android:text="/"
            android:textColor="#ffffff"
            android:textSize="35dp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/btnFactorial"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#00000000"
            android:text="!"
            android:textColor="#ffffff"
            android:textSize="35dp"
            android:gravity="center"/>
    </TableRow>
</TableLayout>