<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#333435"
    tools:context=".MainActivity">


    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="0dp"
        android:layout_height="471dp"
        android:shrinkColumns="*"
        android:stretchColumns="*"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/tvMath"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_span="5"
                android:alpha="0.7"
                android:backgroundTint="@android:color/transparent"
                android:cursorVisible="false"
                android:gravity="right"
                android:text=""
                android:textColor="#ffffff"
                android:textSize="30dp" />
        </TableRow>

        <TableRow android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/tvResult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_span="5"
                android:alpha="0.7"
                android:gravity="right"
                android:text="0"
                android:textColor="#ffffff"
                android:textSize="35dp" />
        </TableRow>
        //TextViews like buttons, we can touch buttons
        //to Perform mathematical expressions

        <TableRow android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/btnOpen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:gravity="center"
                android:text="("
                android:textColor="#ffffff"
                android:textSize="35dp" />

            <TextView
                android:id="@+id/btnClose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:gravity="center"
                android:text=")"
                android:textColor="#ffffff"
                android:textSize="35dp" />

            <TextView
                android:id="@+id/btnResult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:gravity="center"
                android:text="="
                android:textColor="#ffffff"
                android:textSize="35dp" />

            <TextView
                android:id="@+id/btnMod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#efa851"
                android:gravity="center"
                android:text="%"
                android:textColor="#ffffff"
                android:textSize="35dp" />

            <TextView
                android:id="@+id/btnDel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:gravity="center"
                android:text="DEL"
                android:textColor="#ffffff"
                android:textSize="35dp" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/btn7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:gravity="center"
                android:text="7"
                android:textColor="#ffffff"
                android:textSize="35dp" />

            <TextView
                android:id="@+id/btn8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:gravity="center"
                android:text="8"
                android:textColor="#ffffff"
                android:textSize="35dp" />

            <TextView
                android:id="@+id/btn9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:gravity="center"
                android:text="9"
                android:textColor="#ffffff"
                android:textSize="35dp" />

            <TextView
                android:id="@+id/btnPlus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#efa851"
                android:gravity="center"
                android:text="+"
                android:textColor="#ffffff"
                android:textSize="35dp" />

            <TextView
                android:id="@+id/btnAC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:gravity="center"
                android:text="AC"
                android:textColor="#ffffff"
                android:textSize="35dp" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/btn4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:gravity="center"
                android:text="4"
                android:textColor="#ffffff"
                android:textSize="35dp" />

            <TextView
                android:id="@+id/btn5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:gravity="center"
                android:text="5"
                android:textColor="#ffffff"
                android:textSize="35dp" />

            <TextView
                android:id="@+id/btn6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:gravity="center"
                android:text="6"
                android:textColor="#ffffff"
                android:textSize="35dp" />

            <TextView
                android:id="@+id/btnSub"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#efa851"
                android:gravity="center"
                android:text="-"
                android:textColor="#ffffff"
                android:textSize="35dp" />

            <TextView
                android:id="@+id/btnSquareRoot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:gravity="center"
                android:text="@string/sqr_root"
                android:textColor="#ffffff"
                android:textSize="35dp" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/btn1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:gravity="center"
                android:text="1"
                android:textColor="#ffffff"
                android:textSize="35dp" />

            <TextView
                android:id="@+id/btn2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:gravity="center"
                android:text="2"
                android:textColor="#ffffff"
                android:textSize="35dp" />

            <TextView
                android:id="@+id/btn3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:gravity="center"
                android:text="3"
                android:textColor="#ffffff"
                android:textSize="35dp" />

            <TextView
                android:id="@+id/btnMul"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#efa851"
                android:gravity="center"
                android:text="*"
                android:textColor="#ffffff"
                android:textSize="35dp" />

            <TextView
                android:id="@+id/btnX2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:gravity="center"
                android:text="@string/sqr"
                android:textColor="#ffffff"
                android:textSize="35dp" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/btnDot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:gravity="center"
                android:text="."
                android:textColor="#ffffff"
                android:textSize="35dp" />

            <TextView
                android:id="@+id/btn0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:gravity="center"
                android:text="0"
                android:textColor="#ffffff"
                android:textSize="35dp" />

            <TextView
                android:id="@+id/btnANS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:gravity="center"
                android:text="ANS"
                android:textColor="#ffffff"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/btnDiv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#efa851"
                android:gravity="center"
                android:text="/"
                android:textColor="#ffffff"
                android:textSize="35dp" />

            <TextView
                android:id="@+id/btnFactorial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:gravity="center"
                android:text="!"
                android:textColor="#ffffff"
                android:textSize="35dp" />
        </TableRow>
    </TableLayout>
</android.support.constraint.ConstraintLayout>